{
  "$schema": "https://opencode.ai/config.json",
  "model": "duo-chat-sonnet-4-5",
  "plugin": [
    "@vglafirov/opencode-gitlab-plugin",
    "@vglafirov/opencode-gitlab-auth",
    "opencode-skills",
  ],
  "mcp": {
    "gitlab": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://gitlab.com/api/v4/mcp"
      ],
      "enabled": true
    },
    "grafana": {
      "type": "local",
      "command": [
        "/Users/vglafirov/go/bin/mcp-grafana",
        "--disable-write",
        "-t",
        "stdio"
      ],
      "environment": {
        "GRAFANA_URL": "https://dashboards.gitlab.net"
      },
      "enabled": true,
      "timeout": 10000
    },
    "gcloud": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@google-cloud/gcloud-mcp"
      ]
    },
    "notion": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.notion.com/mcp"
      ],
      "enabled": true
    },
    "knowledge-graph": {
      "type": "remote",
      "url": "http://localhost:27495/mcp/sse",
      "enabled": true
    },
    "flux-operator-mcp": {
      "type": "local",
      "command": [
        "flux-operator-mcp",
        "serve"
      ],
      "environment": {
        "KUBECONFIG": "/Users/vglafirov/.kube/config",
        "FLUX_MCP_IMPERSONATE_SA": "flux-reader",
        "FLUX_MCP_IMPERSONATE_NS": "flux-system"
      },
      "enabled": true,
      "timeout": 10000
    },
    "kubernetes": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "kubernetes-mcp-server@latest"
      ],
      "environment": {
        "KUBECONFIG": "/Users/vglafirov/.kube/config"
      },
      "enabled": true,
      "timeout": 10000
    }
  }
}
